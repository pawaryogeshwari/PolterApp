<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_color">


    <RelativeLayout
        android:id="@+id/navBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/themecolor"
        android:orientation="horizontal"
        android:padding="@dimen/margin_10"
        >

        <ImageView
            android:id="@+id/imgBack"
            android:layout_width="@dimen/img_size"
            android:layout_height="@dimen/img_size"
            android:src="@drawable/ic_back"
            android:layout_marginLeft="@dimen/margin_5"
            android:layout_centerVertical="true"

            />

        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textStyle="normal"
            android:textSize="18sp"
            android:textColor="@color/title_color"
            />

        <RelativeLayout
            android:id="@+id/rlLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_5"
            >

            <TextView
                android:id="@+id/txtDone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/done"
                android:textColor="#ffffff"
                android:visibility="visible"
                android:textSize="@dimen/title_font_size"

                />



        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/navBarLayout"
        android:layout_margin="@dimen/margin_20"
        android:background="@drawable/bg_dialog"
       >

        <EditText
            android:id="@+id/edtAddress"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:gravity="start"
            android:layout_margin="@dimen/margin_10"
            android:inputType="textMultiLine"
            android:singleLine="false"
            android:textColorHint="@color/gray_color"
            android:hint="Enter address details here"
            android:textColor="@color/black_color"
            android:background="@null"
            android:visibility="gone"/>

        <LinearLayout
            android:id="@+id/llBankLayout"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_margin="@dimen/margin_10"
            android:visibility="visible"
            >

            <TextView
                android:id="@+id/tvBankName"
                android:text="Bank Name :"
                android:textColor="@color/black_color"
                android:layout_margin="@dimen/margin_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
            <EditText
                android:id="@+id/etBankName"
                android:layout_margin="@dimen/margin_5"
                android:layout_width="match_parent"
                android:textColor="@color/black_color"
                android:padding="@dimen/margin_5"
                android:layout_height="@dimen/margin_30"
                android:background="@drawable/edittext_style"
                />

            <TextView
                android:id="@+id/tvAccountNo"
                android:text="Account No :"
                android:layout_margin="@dimen/margin_5"
                android:textColor="@color/black_color"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

            <EditText
                android:id="@+id/etAccountNo"
                android:layout_margin="@dimen/margin_5"
                android:layout_width="match_parent"
                android:inputType="number"
                android:padding="@dimen/margin_5"
                android:textColor="@color/black_color"
                android:layout_height="@dimen/margin_30"
                android:background="@drawable/edittext_style"
                />


            <TextView
                android:id="@+id/tvIfscCode"
                android:text="IFSC Code :"
                android:layout_margin="@dimen/margin_5"
                android:textColor="@color/black_color"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
            <EditText
                android:id="@+id/etIfscCode"
                android:layout_margin="@dimen/margin_5"
                android:layout_width="match_parent"
                android:inputType="text"
                android:padding="@dimen/margin_5"
                android:textColor="@color/black_color"
                android:layout_height="@dimen/margin_30"
                android:background="@drawable/edittext_style"
                />

            <TextView
                android:id="@+id/tvOtherInfo"
                android:text="Other Info :"
                android:layout_margin="@dimen/margin_5"
                android:textColor="@color/black_color"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

            <EditText
                android:id="@+id/etOtherInfo"
                android:layout_margin="@dimen/margin_5"
                android:layout_width="match_parent"
                android:inputType="textMultiLine"
                android:padding="@dimen/margin_5"
                android:gravity="start"
                android:textColor="@color/black_color"
                android:layout_height="@dimen/width_90"
                android:background="@drawable/edittext_style"
                />

        </LinearLayout>

        <EditText
            android:id="@+id/edtBank"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="start"
            android:layout_margin="@dimen/margin_10"
            android:inputType="textMultiLine"
            android:singleLine="false"
            android:background="@null"
            android:textColorHint="@color/gray_color"
            android:hint="Enter bank details here"
            android:textColor="@color/black_color"
            android:visibility="gone"/>


    </RelativeLayout>




</RelativeLayout>