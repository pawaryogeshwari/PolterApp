<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/llLayoutSectionSurvey"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/white_color">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1"
        android:gravity="left"
        android:layout_marginRight="@dimen/margin_10"
        android:layout_marginTop="@dimen/margin_10">

        <TextView
            android:id="@+id/txtSectionSpecies"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.20"
            android:layout_marginLeft="@dimen/margin_10"
            android:gravity="center_vertical|end"
            android:text="@string/species"
            android:ellipsize="end"
            android:singleLine="true"
            android:textSize="16sp"
            android:textColor="@color/input_text_color"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.05"
            android:gravity="center_vertical|end"
            android:text=":"
            android:ellipsize="end"
            android:singleLine="true"
            android:textSize="16sp"
            android:textColor="@color/input_text_color"/>

        <EditText
            android:id="@+id/edtSectionSpecies"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="0.20"
            android:layout_marginLeft="@dimen/margin_5"
            android:textSize="@dimen/text_18sp"
            android:padding="@dimen/margin_5"
            android:singleLine="true"
            android:background="@drawable/edittext_style"
            android:textColor="@color/black_color"
            android:ems="10" />

        <TextView
            android:id="@+id/txtSectionKind"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.30"
            android:ellipsize="end"
            android:singleLine="true"
            android:layout_marginLeft="@dimen/margin_15"
            android:gravity="center_vertical|end"
            android:text="@string/kind"
            android:textSize="16sp"
            android:textColor="@color/input_text_color"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.05"
            android:gravity="center_vertical|end"
            android:text=":"
            android:ellipsize="end"
            android:singleLine="true"
            android:textSize="16sp"
            android:textColor="@color/input_text_color"/>

        <EditText
            android:id="@+id/edtSectionKind"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="0.20"
            android:layout_marginLeft="@dimen/margin_5"
            android:layout_marginRight="@dimen/margin_5"
            android:textSize="@dimen/text_18sp"
            android:padding="@dimen/margin_5"
            android:singleLine="true"
            android:background="@drawable/edittext_style"
            android:textColor="@color/black_color"
            android:ems="10" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1"
        android:gravity="left"
        android:layout_marginTop="@dimen/margin_10">

        <TextView
            android:id="@+id/txtSectionQuality"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.20"
            android:gravity="center_vertical|end"
            android:layout_marginLeft="@dimen/margin_15"
            android:text="@string/quality_value"
            android:textSize="16sp"
            android:textColor="@color/input_text_color"/>

        <EditText
            android:id="@+id/edtSectionQuality"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="0.20"
            android:layout_marginLeft="@dimen/margin_5"
            android:textSize="@dimen/text_18sp"
            android:padding="@dimen/margin_5"
            android:singleLine="true"
            android:background="@drawable/edittext_style"
            android:textColor="@color/black_color"
            android:ems="10" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#e3e3e3"
        android:layout_margin="@dimen/margin_10"/>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1"
        android:layout_marginTop="@dimen/margin_10">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:layout_marginLeft="@dimen/margin_15"
            android:gravity="center_vertical|end"
            android:text="@string/length_m"
            android:textSize="16sp"
            android:textColor="@color/input_text_color"/>

        <EditText
            android:id="@+id/edtSecLength"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="0.20"
            android:layout_marginLeft="@dimen/margin_5"
            android:textSize="@dimen/text_18sp"
            android:padding="@dimen/margin_5"
            android:singleLine="true"
            android:inputType="number"
            android:background="@drawable/edittext_style"
            android:textColor="@color/black_color"
            android:ems="10" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.30"
            android:gravity="center_vertical|end"
            android:layout_marginLeft="@dimen/margin_5"
            android:text="@string/width_m"
            android:ellipsize="end"
            android:singleLine="true"
            android:textSize="16sp"
            android:textColor="@color/input_text_color"/>

        <EditText
            android:id="@+id/edtSectionWidth"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="0.20"
            android:layout_marginLeft="@dimen/margin_5"
            android:textSize="@dimen/text_18sp"
            android:padding="@dimen/margin_5"
            android:singleLine="true"
            android:inputType="number"
            android:background="@drawable/edittext_style"
            android:textColor="@color/black_color"
            android:ems="10" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1"
        android:gravity="center"
        android:layout_marginTop="@dimen/margin_10">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.50"
            android:layout_marginLeft="@dimen/margin_20"
            android:gravity="center_vertical|end"
            android:text="@string/section_length_m"
            android:textSize="16sp"
            android:textColor="@color/input_text_color"/>

        <EditText
            android:id="@+id/edtSectionLength"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="0.20"
            android:textSize="@dimen/text_18sp"
            android:layout_marginLeft="@dimen/margin_15"
            android:padding="@dimen/margin_5"
            android:singleLine="true"
            android:inputType="number"
            android:background="@drawable/edittext_style"
            android:textColor="@color/black_color"
            android:ems="10" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="left"
        android:layout_marginLeft="@dimen/margin_30"
        android:layout_marginTop="@dimen/margin_10">

        <TextView
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_30"
            android:text="@string/nr_value"
            android:gravity="center"
            android:textSize="16sp"
            android:textColor="@color/input_text_color"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginLeft="@dimen/margin_20"
            android:text="@string/height_m"
            android:textSize="16sp"
            android:textColor="@color/input_text_color"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginLeft="@dimen/margin_20"
            android:text="@string/section_m"
            android:textSize="16sp"
            android:textColor="@color/input_text_color"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="left"
        android:layout_marginLeft="@dimen/margin_30"
        android:layout_marginTop="@dimen/margin_10">

        <EditText
            android:id="@+id/edtNr"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:textSize="@dimen/text_18sp"
            android:padding="@dimen/margin_5"
            android:text="1"
            android:singleLine="true"
            android:enabled="false"
            android:layout_marginLeft="@dimen/margin_15"
            android:background="@drawable/edittext_style"
            android:textColor="@color/black_color" />

        <EditText
            android:id="@+id/edtHeight"
            android:layout_width="@dimen/width_90"
            android:layout_height="30dp"
            android:textSize="@dimen/text_18sp"
            android:padding="@dimen/margin_5"
            android:inputType="number"
            android:digits="0123456789."
            android:singleLine="true"
            android:layout_marginLeft="@dimen/margin_10"
            android:background="@drawable/edittext_style"
            android:textColor="@color/black_color"
            />

        <EditText
            android:id="@+id/edtSection"
            android:layout_width="@dimen/width_90"
            android:layout_height="30dp"
            android:textSize="@dimen/text_18sp"
            android:padding="@dimen/margin_5"
            android:digits="0123456789."
            android:inputType="number"
            android:singleLine="true"
            android:layout_marginLeft="@dimen/margin_10"
            android:background="@drawable/edittext_style"
            android:textColor="@color/black_color"
            />

        <ImageView
            android:id="@+id/imgAddMeasureEntry"
            android:layout_width="40dp"
            android:layout_height="@dimen/img_size"
            android:src="@drawable/ic_add_measure"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/dark_gray_color"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/margin_20"
        android:layout_marginRight="30dp"
        android:layout_marginTop="@dimen/margin_20"
        android:layout_marginBottom="@dimen/margin_20"
        android:visibility="visible">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rvHeightEntry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/swipe_left_hint"
            android:textColor="@color/black_color"
            android:gravity="center"
            android:padding="@dimen/margin_30"
            />



    </LinearLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_5"
        android:layout_marginLeft="@dimen/margin_5">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_15"
            android:textColor="#000000"
            android:text="@string/sum_of_sections"
            />

        <TextView
            android:id="@+id/txtSumOfSections"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_15"
            android:textColor="#000000"
            android:text="0.00"
            />

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/margin_5"
        android:layout_marginLeft="@dimen/margin_5"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/height_count"
            android:layout_marginLeft="@dimen/margin_15"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/txtHeightCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_15"
            android:textColor="#000000"
            android:text="0"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/avg_height"
            android:layout_marginLeft="@dimen/margin_15"
            android:textColor="#000000"
           />

        <TextView
            android:id="@+id/txtAvgHeight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_15"
            android:textColor="#000000"
            android:text="0.00"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_5">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/volume"
            android:layout_marginTop="@dimen/margin_20"
            android:layout_marginLeft="@dimen/margin_15"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/txtVolumeBark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_20"
            android:layout_marginLeft="@dimen/margin_15"
            android:textColor="#000000"
            android:textStyle="bold"
            android:text="0.00"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_10"
        android:layout_marginLeft="@dimen/margin_15">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/st"
            android:gravity="center"
            android:textColor="@color/black_color"/>

        <TextView
            android:id="@+id/txtST"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="0.0"
            android:layout_marginLeft="@dimen/margin_5"
            android:gravity="center"
            android:textColor="@color/black_color"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/distr"
            android:gravity="center"
            android:layout_marginLeft="@dimen/margin_30"
            android:textColor="@color/black_color"/>


        <EditText
            android:id="@+id/edtDistr"
            android:layout_width="@dimen/width_50"
            android:layout_height="20dp"
            android:textSize="@dimen/text_12sp"
            android:singleLine="true"
            android:paddingLeft="@dimen/margin_5"
            android:paddingTop="3dp"
            android:paddingRight="3dp"
            android:paddingBottom="3dp"
            android:text="4.0"
            android:inputType="number"
            android:digits="0123456789."
            android:layout_marginLeft="@dimen/margin_10"
            android:background="@drawable/edittext_style"
            android:textColor="@color/black_color"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_10"
        android:layout_marginLeft="@dimen/margin_15">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="m3 :"
            android:gravity="center"
            android:textColor="@color/black_color"/>

        <TextView
            android:id="@+id/txtM3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="0.0"
            android:layout_marginLeft="@dimen/margin_5"
            android:gravity="center"
            android:textColor="@color/black_color"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/factor"
            android:gravity="center"
            android:layout_marginLeft="@dimen/margin_30"
            android:textColor="@color/black_color"/>


        <EditText
            android:id="@+id/edtFactor"
            android:layout_width="@dimen/width_50"
            android:layout_height="20dp"
            android:textSize="@dimen/text_12sp"
            android:inputType="number"
            android:digits="0123456789."
            android:singleLine="true"
            android:paddingLeft="@dimen/margin_5"
            android:paddingTop="3dp"
            android:paddingRight="3dp"
            android:paddingBottom="3dp"
            android:text="0.60"
            android:layout_marginLeft="12dp"
            android:background="@drawable/edittext_style"
            android:textColor="@color/black_color"
            />

    </LinearLayout>



</LinearLayout>